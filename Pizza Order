class user:
    def __init__(self, size, price, quantity)
        self.size = sizes
        self.price = price
        self.quantiy = quantity

    def calculate_price(self):
        if self.size == "Small":
            self.price += 10
        if self.size == "Medium"
            self.price += 12
        if self.size == "Large"
            self.price += 15
        if self.size == "X Large"
            self.price += 18